/* pages/page-result/page-result.wxss */
page{
  height: 100%;
}

.container{
  display: flex;
  height: 50%;
  flex-direction: column;
  justify-content: flex-start;
  position: absolute;
  right: 0;
  left: 0;
}

.bottom{
  top: 50%;
}

.container-row{
  margin-top: 1rem;
  display: flex;
  flex-direction: row;
  justify-content: space-around;

}

.section{
}

.section__title{
    padding-top: 15px;
    padding-left: 15px;
    padding-right: 15px;
    padding-bottom: 15px;
    color: white;
    font-family: "TangYiShanKaiW";
    font-size: 20px;
    background-color: rgba(255,255,255,0.15);
}
.inner{
  color: white;
  height: 2rem;
  font-size: 16px;
}

