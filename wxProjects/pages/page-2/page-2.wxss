/* pages/page-2/page-2.wxss */

/*
大框架设置relative
小框架设置absolute即可重叠
*/
page{
  height: 100%;
}

.bg-box{
  height: 100%;
  position: relative;
  background-color: black;
}

.bg-img{
  height: 100%;
  width: 100%;
  display: block;
  float: left;
  position: absolute;
  filter: brightness(80%)
}

.container-column{
  position: absolute;
  right: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.title{
  color: wheat;
  padding: 15px;
  font-family: "pagetwo";
  font-size: 35px;

}

.mid{
  top: 10%;
  height: 65%;
  width: 100%;
  border-bottom: 1rpx solid black;
}

.top{
  top: 0%;
  height: 10%;
  border-bottom: 1rpx solid white;

}

.bottom{
  height: 25%;
  top: 75%;
  justify-content: center;

}

.eventhem{
  justify-content: space-between;
  align-items: center;
}

.inner{
  width: 100%;
  padding: 13px;
  background-color: rgba(255,255,255,0.15);
  font-size: 15px;
  color: white;
  text-align: center;
}

.wanna{
  width: 100%;
  padding: 13px;
  background-color: rgba(255,255,255,0.15);
  font-size: 15px;
  color: #b0b0b0;
  text-align: center;
}

.btn{
  width: 50%;
  background-color: rgba(255,0,0,0.35);
  color: white;
}

.light-gray{
  background-color: gray;
}